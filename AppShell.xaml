<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="pk9reader.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:pk9reader">
    <TabBar>
        <Tab Title="Pk9 Editor">
            <ShellContent Title="Main" ContentTemplate="{DataTemplate local:MainPage}"  />
            <ShellContent Title="Met" ContentTemplate="{DataTemplate local:MetTab}" />


            <ShellContent Title="Stats" ContentTemplate="{DataTemplate local:StatsTab}" Route="StatsTab"></ShellContent>

            <ShellContent Title="Attacks" ContentTemplate="{DataTemplate local:AttacksTab}" Route="AttackTab"></ShellContent>

            <ShellContent Title="OT/MISC" ContentTemplate="{DataTemplate local:OTTab}" Route="OTTab"></ShellContent>
        </Tab>
        <Tab Title="Box">
            <ShellContent Title="Box" ContentTemplate="{DataTemplate local:BoxTab}"/>
        </Tab>
        <Tab Title="Raids">
            <ShellContent Title="Raids" ContentTemplate="{DataTemplate local:RaidViewer}"/>
         
        </Tab>
    </TabBar>
</Shell>

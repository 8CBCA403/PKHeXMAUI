<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            
             x:Class="PKHeXMAUI.EncounterDB"
             Title="Encounter Database">
    <VerticalStackLayout>
        <Button Text="Search Settings" Clicked="SetSearchSettings"/>
        <Button Text="Search" Clicked="SearchEncountersClick"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <CollectionView HeightRequest="375" WidthRequest="400" x:Name="EncounterCollection" SelectionMode="Single" ></CollectionView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
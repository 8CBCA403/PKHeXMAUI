<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pk9reader.RaidViewer"
             Title="RaidViewer">
    
    <RefreshView x:Name="raidrefresh">
        <ScrollView>
            <StackLayout>
                <Button Text="Shinify" x:Name="testlab" Clicked="shinify" BackgroundColor="DeepSkyBlue" BorderColor="Black" BorderWidth="2"></Button>
                <Button Text="Teleport" x:Name="teleportbutton" Clicked="teleport" BackgroundColor="DeepSkyBlue" BorderColor="Black" BorderWidth="2"/>
                <Button Text="Screenshot" x:Name="sceenshotbutton" Clicked="takeascreenshot" BackgroundColor="DeepSkyBlue" BorderColor="Black" BorderWidth="2"/>
                <CollectionView HeightRequest="450" WidthRequest="400" x:Name="raidview" SelectionMode="Single" SelectionChanged="update" ></CollectionView>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
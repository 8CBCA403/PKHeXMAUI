<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PKHeXMAUI.BoxTab"
             Title="BoxTab">
    <RefreshView x:Name="boxrefresh">
        <ScrollView>
            <StackLayout>
                
                <Picker FontSize="18"  x:Name="boxnum" SelectedIndexChanged="changebox" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="box_wp_default.png" x:Name="boxbg" Aspect="AspectFill"></Image>
                        <CollectionView HeightRequest="375" WidthRequest="400" x:Name="boxview" SelectionMode="Single" ></CollectionView>
                </Grid>
               
            </StackLayout>
        </ScrollView>
      
    </RefreshView>



</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pk9reader.BoxTab"
             Title="BoxTab">
    <RefreshView x:Name="boxrefresh">
        <ScrollView>
            <StackLayout>
                <Button Text="Read All Boxes" x:Name="readbox" Clicked="readboxdata" BackgroundColor="DeepSkyBlue" />
                <Button Text="Inject" x:Name="injectboxt" Clicked="injectboxtab" BackgroundColor="DeepSkyBlue"/>
                <Picker FontSize="18"  x:Name="boxnum" SelectedIndexChanged="changebox" />
                <CollectionView HeightRequest="500" WidthRequest="400" x:Name="boxview" SelectionMode="Single" SelectionChanged="applypkfrombox"></CollectionView>
              

            </StackLayout>
        </ScrollView>
      
    </RefreshView>



</ContentPage>
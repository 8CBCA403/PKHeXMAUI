<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pk9reader.RibbonSelector"
             Title="NewPage1">
    <RefreshView x:Name="ribbonrefresh">
    <VerticalStackLayout>
        <CollectionView HeightRequest="500" WidthRequest="400" x:Name="ribboncollection" SelectionMode="Multiple" ></CollectionView>
        <Button x:Name="applyribbons" Text="Apply" Clicked="applyribbonsandclose"></Button>
        <Button x:Name="close" Text="Close" Clicked="closer"/>
    </VerticalStackLayout>
    </RefreshView>
</ContentPage>